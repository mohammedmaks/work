= form_for @players do |f|
  - if @players.errors.any?
    #error_explanation
      %h2= "#{pluralize(@players.errors.count, "error")} prohibited this mens_team from being saved:"
      %ul
        - @players.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :level
    = f.text_field :level
  .field
    = f.label :no_of_players
    = f.number_field :no_of_players
  .field
    = f.label :division
    = f.text_field :division
  .actions
    = f.submit 'Save'
